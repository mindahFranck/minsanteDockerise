# =============================================================================
# Health Management Frontend - Environment Variables Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# Note: All variables must be prefixed with VITE_ to be exposed to the app
# =============================================================================

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API base URL
VITE_API_URL=https://api-dev-minsante.it-grafik.com/api/v1

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
VITE_APP_NAME="Health Management System"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Système de Gestion de la Santé du Cameroun"

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
# Options: development, staging, production
VITE_ENV=production

# -----------------------------------------------------------------------------
# Features Flags (Optional)
# -----------------------------------------------------------------------------
# Enable/disable specific features
VITE_ENABLE_MAPS=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true

# -----------------------------------------------------------------------------
# Map Configuration (Leaflet)
# -----------------------------------------------------------------------------
# Default map center (Yaoundé, Cameroon)
VITE_MAP_CENTER_LAT=3.848
VITE_MAP_CENTER_LNG=11.502
VITE_MAP_DEFAULT_ZOOM=6

# Map tile provider URL
VITE_MAP_TILE_URL=https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png

# -----------------------------------------------------------------------------
# Analytics Configuration (Optional)
# -----------------------------------------------------------------------------
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# VITE_SENTRY_DSN=your-sentry-dsn

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------
# LocalStorage key prefix
VITE_STORAGE_PREFIX=health_management_

# -----------------------------------------------------------------------------
# Authentication Configuration
# -----------------------------------------------------------------------------
# Token storage key
VITE_AUTH_TOKEN_KEY=auth_token
# Token refresh threshold in seconds (refresh 5 minutes before expiry)
VITE_TOKEN_REFRESH_THRESHOLD=300

# -----------------------------------------------------------------------------
# UI Configuration
# -----------------------------------------------------------------------------
# Items per page for pagination
VITE_ITEMS_PER_PAGE=10
# Default language
VITE_DEFAULT_LANGUAGE=fr
